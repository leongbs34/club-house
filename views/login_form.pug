extends layout 

block content
  section.bg-dark.p-md-4.flex-grow-1.d-flex.align-items-center
    div#signupContainer.container-md.bg-light.rounded.p-4.col-12.col-md-4
      div.d-flex.flex-column.align-items-center.mb-3
        h2 Log In
        img#avatar(src='images/avatars/alien.svg' width='100px')
      form#signupForm(method='POST')
        div.mb-3
          label.form-label(for="username") Username
          input#username.form-control(type="text" required=true name="username")
        div.mb-3
          label.form-label(for="password") Password
          input#password.form-control(type="password" required=true name="password")
        button.btn.btn-primary(type="submit") Submit
      
        if errors
          ul.list-unstyled.mt-2
            for error in errors
              li.text-danger.fw-bold * !{error.msg}

        if messages.error
          li.text-danger.fw-bold.list-unstyled.mt-2 * !{messages.error}