extends layout 

block content
  section.bg-dark.p-md-4.flex-grow-1
    div.container-md.bg-light.rounded.p-4.col-12.col-md-6
      div.d-flex.flex-column.align-items-center.mb-3
        h2 Join membership
        img#avatar(src='images/avatars/alien.svg' width='100px')
      form#membershipForm(method='POST')
        div.mb-3
          label.form-label(for="member_code") Membership Code
          input#member_code.form-control(type="password" required=true name="member_code")
        button.btn.btn-primary(type="submit") Submit
      
        if errors
          ul.list-unstyled.mt-2
            for error in errors
              li.text-danger.fw-bold * !{error.msg}