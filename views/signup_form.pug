extends layout 

block content
  section.bg-dark.p-md-4.flex-grow-1
    div.container-md.bg-light.rounded.p-4.col-12.col-md-6
      div.d-flex.flex-column.align-items-center.mb-3
        h2 Signup Form
        img#avatar(src='images/avatars/alien.svg' width='100px')
      form#signupForm(method='POST')
        div.mb-3
            input#is_admin.btn-check(type="checkbox" name='is_admin' value='true')
            label.btn.btn-outline-danger(for='is_admin') Admin Rights
        div.mb-3
          label.form-label(for="username" value=(user===undefined ? '' : user.username)) Username
          input#username.form-control(type="text" required=true name="username")
        div.mb-3
          label.form-label(for="password" value=(user===undefined ? '' : user.password)) Password
          input#password.form-control(type="password" required=true name="password")
        div.mb-3
          label.form-label(for="confirm_password") Confirm Password
          input#confirm_password.form-control(type="password" required=true name="confirm_password")
        div.mb-3
          label.form-label(for="first_name" value=(user===undefined ? '' : user.first_name)) First Name
          input#first_name.form-control(type="text" required=true name="first_name")
        div.mb-3
          label.form-label(for="last_name" value=(user===undefined ? '' : user.last_name)) Last Name
          input#last_name.form-control(type="text" required=true name="last_name")
        div.mb-3
          label.form-label(for="avatar") Avatar
          select#avatar.form-select(form='signupForm' name="avatar")
            option(value="alien" selected) Alien 
            option(value="clown") Clown 
            option(value="cowboy") Cowboy 
            option(value="devil") Devil 
            option(value="evil") Evil 
            option(value="ghost") Ghost 
            option(value="robot") Robot 
            option(value="spy") Spy 
        button.btn.btn-primary(type="submit") Submit

        if errors
          ul.list-unstyled.mt-2
            for error in errors
              li.text-danger.fw-bold * !{error.msg}


